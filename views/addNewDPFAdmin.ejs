                                                $("#TypeOfSubstrate").attr("style", "border: 1px solid red");
                                                event.preventDefault();
                                                return;
                                                }
                                                
                                            
                                                if($("#OuterDiameter").val()=="" || $("#OuterDiameter").val()==undefined){
                                                $("#error").html("Please fill in OuterDiameter");
                                                
                                                $("#OuterDiameter").attr("style", "border: 1px solid red");
                                                 event.preventDefault();
                                                return;
                                                }
                                                else{
                                                $("#OuterDiameter").attr("style", "border: 1px solid blue");
                                                }
                                                if($("#SubstrateDiameter").val()=="" ||$("#SubstrateDiameter").val()==undefined){
                                                 $("#error").html("Please fill in SubstrateDiameter");
                                                $("#SubstrateDiameter").attr("style", "border: 1px solid red");
                                                 event.preventDefault();
                                                return;
                                                }
                                                else{
                                                $("#SubstrateDiameter").attr("style", "border: 1px solid blue");

                                                }
                                                if($("#OuterLength").val()=="" || $("#OuterLength").val()==undefined){
                                                $("#error").html("Please fill in OuterLength");
                                                $("#OuterLength").attr("style", "border: 1px solid red");
                                                 event.preventDefault();
                                                return;
                                                }
                                                else{
                                                $("#OuterLength").attr("style", "border: 1px solid blue");
                                                }
                                                
                                                if($("#SubstrateLength").val()=="" ||$("#SubstrateLength").val()==undefined){
                                                $("#error").html("Please fill in SubstrateLength");
                                                $("#SubstrateLength").attr("style", "border: 1px solid red");
                                                 event.preventDefault();
                                                return;
                                                }
                                                else{
                                                $("#SubstrateLength").attr("style", "border: 1px solid blue");
                                                }
                                                
                                                storeCookie();
                                                $("#form_1").submit();
                                                
                                                
                                                },
