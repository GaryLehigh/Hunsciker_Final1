                                                cancelButton: "No",
                                                post: true,
                                                confirmButtonClass: "btn-danger",
                                                cancelButtonClass: "btn-default",
                                                dialogClass: "modal-dialog modal-lg" // Bootstrap classes for large modal
                                                });
                         
                          
                          
                          });
        function storeCookie(){
            $.cookie("SerialNumber", $("#SerialNumber").val(), { expires : 2 });
            $.cookie("PartNumber", $("#PartNumber").val(), { expires : 2 });
            $.cookie("OtherNumber", $("#OtherNumber").val(), { expires : 2 });
            $.cookie("Manufacturer", $("#Manufacturer").val(), { expires : 2 });
            $.cookie("DPForDOC", $("#DPForDOC").val(), { expires : 2 });
            $.cookie("TypeOfSubstrate", $("#TypeOfSubstrate").val(), { expires : 2 });
            $.cookie("OuterLength", $("#OuterLength").val(), { expires : 2 });
            $.cookie("OuterDiameter", $("#OuterDiameter").val(), { expires : 2 });
            $.cookie("SubstrateDiameter", $("#SubstrateDiameter").val(), { expires : 2 });
            $.cookie("SubstrateLength", $("#SubstrateLength").val(), { expires : 2 });
                          }
        function loadCookie(){
             $("#SerialNumber").val($.cookie("SerialNumber"));
              $("#PartNumber").val($.cookie("PartNumber"));
               $("#OtherNumber").val($.cookie("OtherNumber"));
                $("#Manufacturer").val($.cookie("Manufacturer"));
                 $("#DPForDOC").val($.cookie("DPForDOC"));
                  $("#TypeOfSubstrate").val($.cookie("TypeOfSubstrate"));
                   $("#OuterLength").val($.cookie("OuterLength"));
                    $("#SubstrateDiameter").val($.cookie("SubstrateDiameter"));
                     $("#OuterDiameter").val($.cookie("OuterDiameter"));
                     $("#SubstrateLength").val($.cookie("SubstrateLength"));
                     
        }
        </script>

